<?xml version="1.0" encoding="utf-8"?>
<mx:Box xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%"
	paddingRight="10" paddingBottom="10" horizontalAlign="right" verticalAlign="bottom">
	
	<mx:Script>
		<![CDATA[
			protected function labelClickHandler(e:MouseEvent):void {
				var request:URLRequest = new URLRequest("http://zgflex.org");
				navigateToURL(request, "_blank");
			}
		]]>
	</mx:Script>
	
	<mx:Label text="ZgFlex.org" styleName="zgFlex" alpha="0.2" click="labelClickHandler(event)" buttonMode="true" useHandCursor="true" mouseChildren="false" />
</mx:Box>